<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    tools:context="com.example.dylan.avatarfitness.Fragments.HomeFragment"
    android:id="@+id/home_page">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/AvatarImageHomePage"
        android:layout_gravity="left|top" />

    <Button
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:text="View Workouts"
        android:id="@+id/WorkoutButton"
        android:layout_gravity="left|bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Latest Workout:"
        android:id="@+id/LatestWorkoutLabelTextView"
        android:layout_gravity="left|center_vertical"
        android:layout_below="@+id/AvatarImageHomePage"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/LatestExerciseTypeTextView"
        android:layout_below="@+id/LatestWorkoutLabelTextView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/LatestDurationTextView"
        android:layout_below="@+id/LatestExerciseTypeTextView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/FeatTextView"
        android:layout_below="@+id/LatestDurationTextView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/SpeedDirectionTextView"
        android:layout_below="@+id/FeatTextView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hello, "
        android:id="@+id/GreetingTextView"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/AvatarImageHomePage" />

</RelativeLayout>
